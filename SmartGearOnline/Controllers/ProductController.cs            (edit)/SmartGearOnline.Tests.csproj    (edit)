public class ProductController : Controller
{
    private readonly ILogger<ProductController> _logger;

    public ProductController(ILogger<ProductController> logger)
    {
        _logger = logger;
    }

    public IActionResult GetProduct(int id)
    {
        try
        {
            // Logic to get product
        }
        catch (Exception ex)
        {
            _logger.LogError(ex, "An error occurred while getting the product with id {Id}", id);
            return StatusCode(500, "Internal server error");
        }
    }

    // Other methods with similar try-catch structure
}

using Xunit;
using Moq;
using Microsoft.Extensions.Logging;

public class ProductControllerTests
{
    [Fact]
    public void GetProduct_ValidId_ReturnsProduct()
    {
        // Arrange
        var loggerMock = new Mock<ILogger<ProductController>>();
        var controller = new ProductController(loggerMock.Object);
        
        // Act
        var result = controller.GetProduct(1);
        
        // Assert
        Assert.NotNull(result);
        // Additional assertions
    }

    [Fact]
    public void GetProduct_InvalidId_LogsError()
    {
        // Arrange
        var loggerMock = new Mock<ILogger<ProductController>>();
        var controller = new ProductController(loggerMock.Object);
        
        // Act
        var result = controller.GetProduct(-1);
        
        // Assert
        loggerMock.Verify(x => x.LogError(It.IsAny<Exception>(), It.IsAny<string>(), It.IsAny<object[]>()), Times.Once);
    }
}

